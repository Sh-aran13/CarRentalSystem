        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminCarServlet</servlet-name>
        <servlet-class>controller.AdminCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCarServlet</servlet-name>
        <url-pattern>/adminCars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>controller.BookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/bookCar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerPaymentServlet</servlet-name>
        <servlet-class>controller.CustomerPaymentServlet</servlet-class>
    </servlet>
